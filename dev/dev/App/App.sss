@keyframes pageLoading
    0%
        transform: translateX(0%)
    50%
        transform: translateX(100%)
    100%
        transform: translateX(200%)

.root
    //

.header
    padding: 20px 0
    text-align: center
    border-bottom: 1px solid #f1f1f1

.wrapper
    width: 800px
    margin: 0 auto

.logo
    display: inline-block
    vertical-align: middle
    height: 35px

.container
    padding: 40px 0 50px

.footer
    padding: 20px 0
    border-top: 1px solid #f1f1f1
    font-size: 13px
    color: #666

.copyright
    text-align: center


.title
    font-size: 16px
    text-align: center
    font-weight: normal
    margin: 0

.contentLine
    position: relative
    margin: 30px 0 0 0

.contentLineDisabled
    //
    &:after
        position: absolute
        z-index: 100
        left: 0
        top: 0
        right: 0
        bottom: 0
        background: rgba(255,255,255,0.75)
        content: ''

.download
    position: relative
    margin: 0
    border-top: 1px solid #ededed
    padding: 30px 0 0
    text-align: center

.downloadButton
    display: inline-block
    vertical-align: middle
    box-sizing: content-box
    user-select: none
    text-align: center
    position: relative
    overflow: hidden
    background: #d14836
    border: 1px solid color(#d14836 l(-5%))
    height: 42px
    padding: 0 20px 0 45px
    color: #fff
    font-size: 0
    border-radius: 3px
    text-shadow: 0px 1px 1px rgba(0,0,0,.12)
    box-shadow: inset 0px 1px 0px rgba(255,255,255,.15), 0px 1px 1px rgba(0,0,0,.12)

    &:before
        content: ''
        position: absolute
        left: 20px
        top: 50%
        margin-top: -8px
        width: 14px
        height: 15px
        background: URL('../images/sprite.png')
        background-position: -69px -38px

    &:after
        display: inline-block
        vertical-align: middle
        height: 100%
        content: ''

    &:hover
        color: #fff
        background: color(#d14836 l(+5%))
        box-shadow: inset 0px 1px 0px rgba(255,255,255,.15), 0px 1px 4px rgba(0,0,0,.15)

    &:active
        background: color(#d14836 l(-5%))
        border-color: color(#d14836 l(-10%))
        box-shadow: inset 0px 1px 4px rgba(0,0,0,.1)

.downloadButtonText
    display: inline-block
    vertical-align: middle
    font-size: 13px

.loading
    position: fixed
    left: 0
    top: 0
    right: 0
    height: 3px
    overflow: hidden

    &:before
        position: absolute
        left: -100%
        bottom: 0
        width: 100%
        height: 100%
        background: #F67C09
        animation-name: pageLoading
        animation-duration: 1s
        animation-timing-function: linear
        animation-iteration-count: infinite
        content: ''
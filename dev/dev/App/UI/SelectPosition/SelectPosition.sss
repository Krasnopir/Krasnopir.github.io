.root
    position: relative
    z-index: 0

.row
    //

    & + &
        margin-top: -1px
    &:first-child .item:first-child .fakeInput
        border-top-left-radius: 3px
    &:first-child .item:last-child .fakeInput
        border-top-right-radius: 3px
    &:last-child .item:first-child .fakeInput
        border-bottom-left-radius: 3px
    &:last-child .item:last-child .fakeInput
        border-bottom-right-radius: 3px



.item
    display: inline-block
    vertical-align: top
    & + &
        margin-left: -1px

.label
    position: relative
    display: inline-block
    vertical-align: top

.input
    position: absolute
    top: 0
    left: 0
    margin: 0
    opacity: 0

    &:checked + .fakeInput
        background: #fff
        box-shadow: inset 0 0 0 1px #f67c09
        border-color: #f67c09
        z-index: 1


.fakeInput
    position: relative
    display: inline-block
    vertical-align: top
    width: 22px
    height: 22px
    border: 1px solid #cdcdcd
    box-sizing: border-box
    background: #f7f7f7
    font-size: 0
    user-select: none
    cursor: pointer

    &:hover
        background: #fff


.spacer
    display: inline-block
    vertical-align: top
    width: 22px
    height: 22px
    background: #cdcdcd
@keyframes blockLoading
    0%
        transform: translateX(0%)
    50%
        transform: translateX(100%)
    100%
        transform: translateX(200%)


.root
    //

.dropzone
    position: relative
    overflow: hidden
    display: flex
    height: 240px
    box-sizing: border-box
    border: 2px dashed rgba(0,0,0,.2)
    align-items: center
    justify-content: center
    background: #fcfcfc
    text-align: center

    &:before
        display: none
        position: absolute
        left: -100%
        bottom: 0
        width: 100%
        height: 3px
        background: #F67C09
        content: ''

.dropzoneLoading
    //
    &:before
        display: block
        animation-name: blockLoading
        animation-duration: 1s
        animation-timing-function: linear
        animation-iteration-count: infinite


.activeDropzone
    background-color: #F1F6FC

    .dzDefault
        display: none

    .dzHover
        display: block

.dzDefault
    //

.dzDefaultIcon
    text-align: center

    &:before
        display: inline-block
        vertical-align: middle
        width: 48px
        height: 48px
        background: URL('../images/sprite.png')
        background-position: 0 -68px
        content: ''

.dzDefaultText
    margin: 10px 0 0 0
    color: #c0c0c0

.dzDefaultControl
    margin-top: 30px

.dzDefaultButton
    display: inline-block
    vertical-align: middle
    box-sizing: content-box
    user-select: none
    text-align: center
    position: relative
    overflow: hidden
    background: linear-gradient(to bottom,#f2f2f2,#e8e8e8 100%)
    border: 1px solid #ccc
    height: 28px
    line-height: 1
    padding: 0 15px 0 35px
    color: #444
    font-size: 0
    border-radius: 2px
    text-shadow: 0px 1px 1px rgba(255,255,255,.2)
    box-shadow: inset 0px 1px 0px rgba(255,255,255,.35), 0px 1px 0px 0px rgba(0,0,0,.12)
    cursor: pointer
    z-index: 99

    &:before
        position: absolute
        left: 15px
        top: 50%
        height: 12px
        width: 12px
        background: URL('../images/sprite.png')
        background-position: -53px -68px
        margin-top: -7px
        content: ''

    &:after
        display: inline-block
        vertical-align: middle
        height: 100%
        content: ''

    &:hover
        cursor: pointer
        text-decoration: none
        color: #222
        background: linear-gradient(to bottom,#f7f7f7,#ededed 100%)
        box-shadow: inset 0px 1px 0px rgba(255,255,255,.35), 0px 1px 3px 0px rgba(0,0,0,.12)

    &:active
        background: #e8e8e8
        border-color: #c7c7c7
        box-shadow: inset 0px 1px 3px rgba(0,0,0,.12)
        text-shadow: none

.dzDefaultButtonText
    display: inline-block
    vertical-align: middle
    font-size: 13px

.dzDefaultControlText
    color: #C0C0C0
    margin-top: 10px
    display: block


.dzHover
    display: none

.dzHoverIcon
    display: block
    position: relative
    text-align: center
    &:before
        display: inline-block
        vertical-align: middle
        width: 64px
        height: 63px
        background: URL('../images/sprite.png')
        background-position: 0 0
        content: ''


.dzHoverText
    margin-top: 30px
    color: #B5B8BD

.list
    margin-top: 40px






.root
    //

.sortHeader
    display: table
    table-layout: fixed
    width: 100%
    box-sizing: border-box
    border: 1px solid #ededed
    border-bottom: none
    height: 40px
    text-align: center
    border-collapse: collapse
    background: #f7f7f7
    color: #999
    text-transform: uppercase
    text-shadow: 0 1px 0 #fff
    font-size: 11px


.sortMoveCell
    display: table-cell
    vertical-align: middle
    width: 5px
    padding-left: 20px


.sortImageCell
    display: table-cell
    vertical-align: middle
    width: 100px
    padding: 10px 20px
    text-align: center
    user-select: none

.sortInfoCell
    display: table-cell
    vertical-align: top
    padding: 10px 20px 10px 0

.sortInfoLine
    //
    & + &
        margin-top: 10px

.sortDeleteCell
    display: table-cell
    vertical-align: middle
    width: 16px
    padding-right: 20px
    text-align: center

.sortBody
    border: 1px solid #ededed

.sortItem
    position: relative
    display: table
    width: 100%
    user-select: none

    & + &
        border-top: 1px solid #ededed


.sortStaticItem
    composes: sortItem

    & + &
        //
        &:after
            position: absolute
            left: 0
            top: 0
            right: 0
            bottom: 0
            background: rgba(255,255,255,0.75)
            content: ''

        .sortMove:before
            z-index: 1

.sortMove
    display: inline-block
    vertical-align: middle
    width: 5px
    height: 42px

    &:before
        position: absolute
        left: 0
        top: 0
        right: 0
        bottom: 0
        content: ''
.sortMoveArrow
    position: relative
    z-index: 1
    display: inline-block
    vertical-align: middle
    width: 100%
    height: 100%
    background: URL('../images/sprite.png')
    background-position: -95px -70px
    content: ''

    &:hover
        cursor: row-resize
        background-position: -72px -70px

.sortImageHolder
    position: relative
    display: inline-block
    width: 100%
    border: 5px solid #fff
    border-radius: 5px
    box-sizing: border-box
    box-shadow: 0 2px 4px -1px rgba(0,0,0,0.2)
    background: #fff
    user-select: none

    &:before
        display: block
        padding: 50%
        content: ''

.sortImage
    position: absolute
    left: 0
    right: 0
    bottom: 0
    top: 0
    margin: auto
    max-width: 100%
    max-height: 100%
    user-select: none

.sortImageName
    display: block
    font-size: 10px
    color: #777
    user-select: none
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    // word-wrap: break-word
    // word-break: break-all

.sortImageSize
    display: block
    font-size: 10px
    color: #777
    user-select: none

.sortDelete
    display: inline-block
    vertical-align: middle
    width: 16px
    height: 16px
    background: URL('../images/sprite.png')
    background-position: -68px -1px
    opacity: 0.4

    &:hover
        cursor: pointer
        opacity: 0.8
.root
    position: relative
    display: inline-block
    vertical-align: middle

.input
    position: absolute
    right: 100%
    bottom: 100%
    margin: 0
    opacity: 0

.input:checked
    //
    & + .preview
        border-color: #f67c09
        box-shadow: inset 0 0 0 1px #f67c09

.preview
    display: inline-block
    vertical-align: middle
    border-radius: 4px
    border: 1px solid #cdcdcd
    padding: 3px
    cursor: pointer
    overflow: hidden

.previewInner
    display: inline-block
    vertical-align: middle
    width: 0
    height: 0
    border: 7px solid transparent
    border-radius: 2px
    box-shadow: 0 0 1px rgba(0,0,0,.5)
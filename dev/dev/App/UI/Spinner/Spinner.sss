@keyframes spinner
    to
        transform: rotate(360deg)

@keyframes spinnerInner
    0%
        transform: rotate(0deg)
    50%
        transform: rotate(-180deg)
    100%
        transform: rotate(0deg)


.root
    z-index: 10
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0
    background: rgba(255,255,255,.5)
    font-size: 5px
    text-align: center


.circle
    position: absolute
    left: 50%
    top: 50%
    margin: -5em 0 0 -5em
    width: 10em
    height: 10em
    animation: spinner 800ms linear 0s infinite normal

    &:before
        position: absolute
        left: 0
        top: 0
        right: 0
        bottom: 0
        border: 1em solid #dfe1f0
        box-sizing: border-box
        border-radius: 50%
        content: ''


.fixedCircle
    composes: circle
    position: fixed
    left: auto


.innerCircle
    position: absolute
    width: 100%
    height: 100%
    top: 0
    right: 0
    clip: rect(0, 10em, 10em, 5em)

    &:before
        content: ''
        position: absolute
        width: 100%
        height: 100%
        border-radius: 50%
        top: 0
        right: 0
        border: 1em solid #f67c09
        box-sizing: border-box
        clip: rect(0, 10em, 10em, 5em)
        animation: spinnerInner 1800ms linear 0s infinite normal


.typeBlock
    position: relative
    display: block
    left: auto
    top: auto
    right: auto
    bottom: auto
    height: 10em
    margin: 20px 0
    background: transparent


.positionFixed
    position: fixed

.positionStatic
    position: relative
    display: inline-block
    left: auto
    top: auto
    right: auto
    bottom: auto
    width: 10em
    height: 10em


.bgLightGrey
    background: #f6f8fd

.bgTransparent
    background: transparent

.bgWhite
    background: #fff


.size16
    font-size: 1.6px

.size20
    font-size: 2px

.size30
    font-size: 3px

.size40
    font-size: 4px


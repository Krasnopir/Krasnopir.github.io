.root
    position: relative
    display: inline-block
    margin: 2px 0 0
    vertical-align: middle
    white-space: nowrap

.input
    position: absolute
    top: -1px
    left: 0
    margin: 0
    opacity: 0

    &:checked + .fakeInput
        //
        &:after
            visibility: visible

    &:disabled + .fakeInput
        //
        &:before
            background-color: #fcfcfc
            cursor: default


.fakeInput
    position: relative
    display: inline-block
    vertical-align: top
    width: 16px
    height: 16px
    font-size: 0
    user-select: none
    cursor: pointer

    &:before,
    &:after
        position: absolute
        top: 0
        left: 0
        width: 16px
        height: 16px
        content: ''


    &:before
        border: 1px solid #cdcdcd
        box-sizing: border-box
        border-radius: 3px
        background: #fff

    &:after
        visibility: hidden
        background-position: center
        background-repeat: no-repeat
        background-size: 10px auto
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 512 512' fill='black'%3E%3Cpath d='M432 64l-240 240-112-112-80 80 192 192 320-320z' /%3E%3C/svg%3E")

.text
    display: inline-block
    margin-left: 6px
    font-size: 13px
    white-space: normal
    -moz-user-select: none
    -webkit-user-select: none
    user-select: none


.textDisabled
    composes: text
    color: #cdcdcd
